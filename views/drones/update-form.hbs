<h2>Update the drone</h2>

<form action="/drones/{{_id}}/edit" method="post">
<label for="name">Name:</label>
<input type="text" name="name" value="{{name}}">
<label for="propellers"></label>
<input type="number" name="propellers" value="{{propellers}}">
<label for="maxSpeed"></label>
<input type="text" name="maxSpeed" value="{{maxSpeed}}">
<button type="submit">Update</button>
</form>